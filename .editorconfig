root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.json]
indent_style = space
indent_size = 2

[{*.graphqls,*.graphql}]
indent_style = space
indent_size = 4
max_line_length = 999 # because prettier for vscode has automatic wrapping

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4
