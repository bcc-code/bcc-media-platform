{
  "settings": {
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "standard",
          "char_filter": [
            "segment_code"
          ],
          "filter": [
            "norwegian_stemmer",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "norwegian_stemmer": {
          "type": "stemmer",
          "language": "norwegian"
        }
      },
      "char_filter": {
        "segment_code": {
          "type": "pattern_replace",
          "pattern": "(\\{\\d*\\})",
          "replacement": "",
          "all": true
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "text": {
        "type": "text",
        "analyzer": "default",
        "term_vector": "with_positions_offsets"
      }
    }
  }
}
