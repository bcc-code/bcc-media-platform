{
  "settings": {
    "analysis": {
      "analyzer": {
        "default": {
          "tokenizer": "standard",
          "char_filter": [
            "segment_code"
          ],
          "filter": [
            "norwegian_stemmer",
            "english_stemmer",
            "asciifolding"
          ]
        },
        "default-no": {
          "tokenizer": "standard",
          "char_filter": [
            "segment_code"
          ],
          "filter": [
            "norwegian_stemmer",
            "asciifolding"
          ]
        },
        "default-en": {
          "tokenizer": "standard",
          "char_filter": [
            "segment_code"
          ],
          "filter": [
            "english_stemmer",
            "asciifolding"
          ]
        }
      },
      "filter": {
        "norwegian_stemmer": {
          "type": "stemmer",
          "language": "norwegian"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        }
      },
      "char_filter": {
        "segment_code": {
          "type": "pattern_replace",
          "pattern": "(\\{\\d*\\})",
          "replacement": "",
          "all": true
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "text": {
        "properties": {
          "no": {
            "type": "text",
            "analyzer": "default-no",
            "term_vector": "with_positions_offsets"
          },
          "en": {
            "type": "text",
            "analyzer": "default-en",
            "term_vector": "with_positions_offsets"
          }
        }
      }
    }
  }
}
